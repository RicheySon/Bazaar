# BCH Chipnet NFT Marketplace - Environment Variables
# Copy this to .env.local and fill in your values

# Pinata IPFS Configuration (https://www.pinata.cloud)
PINATA_JWT=your_pinata_jwt_here
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud
NEXT_PUBLIC_PINATA_UPLOAD_TIMEOUT_MS=20000
PINATA_TIMEOUT_MS=20000

# BCH Chipnet Network
NEXT_PUBLIC_ELECTRUM_HOST=chipnet.imaginary.cash
NEXT_PUBLIC_ELECTRUM_PORT=50004
NEXT_PUBLIC_ELECTRUM_SCHEME=wss
# Optional list of Electrum servers (comma-separated). Supports host:port:scheme or wss://host:port.
NEXT_PUBLIC_ELECTRUM_SERVERS=
# Electrum socket timeout + ping (ms)
NEXT_PUBLIC_ELECTRUM_TIMEOUT_MS=10000
NEXT_PUBLIC_ELECTRUM_PING_MS=10000
NEXT_PUBLIC_NETWORK=chipnet

# API caching + retry tuning
MARKETPLACE_INDEX_CACHE_MS=15000
WALLET_CACHE_MS=15000
WALLET_TIMEOUT_MS=15000
WALLET_MAX_RETRIES=1

# Marketplace Configuration
NEXT_PUBLIC_MARKETPLACE_FEE_PERCENT=2
NEXT_PUBLIC_DEFAULT_ROYALTY_PERCENT=10

# On-chain listing index (optional override)
# If not set, a deterministic address will be derived from LISTING_INDEX_PKH
NEXT_PUBLIC_LISTING_INDEX_ADDRESS=
NEXT_PUBLIC_LISTING_INDEX_PKH=2222222222222222222222222222222222222222
