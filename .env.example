# BCH Chipnet NFT Marketplace - Environment Variables
# Copy this to .env.local and fill in your values

# Pinata IPFS Configuration (https://www.pinata.cloud)
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt_here
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud

# BCH Chipnet Network
NEXT_PUBLIC_ELECTRUM_HOST=chipnet.imaginary.cash
NEXT_PUBLIC_ELECTRUM_PORT=50004
NEXT_PUBLIC_NETWORK=chipnet

# Marketplace Configuration
NEXT_PUBLIC_MARKETPLACE_FEE_PERCENT=2
NEXT_PUBLIC_DEFAULT_ROYALTY_PERCENT=10
